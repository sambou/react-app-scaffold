{
  "compileOnSave": false,
  "filesGlob": [
    "./webpack/webpack.development.config.js",
    "./src/**/*.ts",
    "./src/**/*.tsx",
    "./test/**/*.ts",
    "./test/**/*.tsx",
    "!./node_modules/**/*.ts",
    "./typings/main.d.ts"
  ],
  "compilerOptions": {
    "jsx": "react",
    "noEmitOnError": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es6",
    "allowJs": true,
    "outDir": "./ts/"
  },
  "files": [
    "./webpack/webpack.development.config.js",
    "./src/client/actions/action.ts",
    "./src/client/actions/index.ts",
    "./src/client/middleware/logger.ts",
    "./src/client/reducers/index.ts",
    "./src/client/store/index.ts",
    "./src/server/index.ts",
    "./src/server/webpack-dev-tools.ts",
    "./src/client/components/sample-page.tsx",
    "./src/client/containers/app.tsx",
    "./src/client/index.tsx",
    "./src/client/noscript/index.tsx",
    "./src/server/noscript/index.tsx",
    "./test/client/components/sample-page.tsx",
    "./typings/main.d.ts"
  ],
  "exclude": [],
  "atom": {
    "rewriteTsconfig": true
  }
}
