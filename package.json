{
  "name": "react-app-scaffold",
  "version": "0.0.1",
  "description": "Frontend scaffold based on node.js/express server, webpack build tool, React as view library ...",
  "repository": "https://github.com/sambou/react-app-scaffold",
  "main": "index.js",
  "scripts": {
    "prestart": "rm -rf target",
    "start": "NODE_ENV=development ./node_modules/.bin/ts-node ./src/server/index.ts & ./node_modules/.bin/webpack --watch --config ./webpack/webpack.development.config.js",
    "test": "./node_modules/.bin/mocha --require ts-node/register test/**/*.ts*",
    "postinstall": "bash bin/build.sh",
    "build": "NODE_ENV=production ./node_modules/.bin/webpack -p --config ./webpack/webpack.production.config.js --optimize-minimize"
  },
  "author": "Sami Boussaid <sboussaid3@gmail.com>",
  "license": "ISC",
  "dependencies": {
    "app-root-path": "1.0.0",
    "assertion-error": "^1.0.1",
    "babel": "^6.3.26",
    "babel-loader": "^6.2.1",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "babel-register": "^6.4.3",
    "chai": "^3.4.1",
    "css-loader": "^0.23.1",
    "exports-loader": "^0.6.2",
    "express": "^4.13.3",
    "extract-text-webpack-plugin": "^1.0.1",
    "html-loader": "^0.4.0",
    "html-webpack-plugin": "2.8.1",
    "image-webpack-loader": "^1.6.2",
    "imports-loader": "^0.6.5",
    "jsdom": "8.0.2",
    "mocha": "^2.3.4",
    "node-sass": "^3.4.2",
    "react": "^0.14.6",
    "react-addons-test-utils": "^0.14.6",
    "react-dom": "^0.14.6",
    "react-redux": "^4.0.6",
    "react-router": "2.0.0",
    "redux": "^3.0.5",
    "redux-devtools": "3.1.1",
    "redux-thunk": "^1.0.3",
    "sass-loader": "^3.1.2",
    "style-loader": "^0.13.0",
    "ts-loader": "0.8.1",
    "ts-node": "^0.5.5",
    "typescript": "^1.7.5",
    "typings": "0.6.8",
    "webpack": "^1.12.10",
    "webpack-hot-middleware": "2.7.1",
    "webpack-manifest-plugin": "1.0.0",
    "whatwg-fetch": "^0.11.0"
  },
  "devDependencies": {
    "babel-plugin-react-transform": "2.0.0",
